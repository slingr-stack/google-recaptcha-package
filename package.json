{
    "name": "googlerecaptcha",
    "label": "Google ReCAPTCHA Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        },
        {
            "type": "package",
            "name": "oauth",
            "version": "v1.0.19"
        }
    ],
    "configuration": [
        {
            "label": "Recaptcha Secret",
            "name": "recaptchaSecret",
            "type": "text",
            "required": true
        },
        {
            "name": "GOOGLE_RE_CAPTCHA_API_BASE_URL",
            "label": "Google ReCAPTCHA Api Url",
            "type": "label",
            "value": "https://www.google.com/recaptcha/api"
        },
        {
            "name": "choice",
            "label": "Choice",
            "required": false,
            "defaultValue": "true",
            "type": "buttonsGroup",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues": [
                    {
                        "label": "True",
                        "name": "true"
                    },
                    {
                        "label": "False",
                        "name": "false"
                    },
                    {
                        "label": "Other",
                        "name": "other"
                    }
                ]
            }
        },
        {
            "name": "text",
            "label": "Text",
            "type": "text",
            "required": "false",
            "visibility": "config.choice == 'true'"
        },
        {
            "name": "info",
            "label": "info",
            "type": "label",
            "value": "'info'"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from PandaDoc."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/webhook.js"
        },
        {
            "type": "flowStep",
            "namespace": "apiReCAPTCHA",
            "path": "/flowSteps/apiReCAPTCHA"
        }
    ]
}